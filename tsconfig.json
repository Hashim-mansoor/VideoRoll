{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "sourceMap": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "chrome",
            "jest"
        ]
    },
    "isolatedModules": true,
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ]
}